<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.sauca.ard_wifi.Main"
    android:weightSum="1">


    <android.support.v7.widget.SwitchCompat
        android:id="@+id/STC_WIFI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:onClick="onClick"
        android:paddingEnd="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingStart="20dp"
        android:scaleY="1.5"
        android:text="@string/bt_off"
        android:textOff="@string/Off"
        android:textOn="@string/On"
        android:textSize="25sp"
        android:textStyle="bold"
        android:theme="@style/MySwitch"
        app:switchMinWidth="70dp" />


    <RelativeLayout
        android:id="@+id/RL_Frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.80"
        android:orientation="vertical"
        android:visibility="visible">

        <ToggleButton
            android:id="@+id/TB_Led1"
            style="@style/AppTheme"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:checked="false"
            android:onClick="onClick"
            android:text="@string/L1_Off"
            android:textAlignment="center"
            android:textColorLink="@android:color/transparent"
            android:textOff="@string/L1_Off"
            android:textOn="@string/L1_On"
            android:textSize="24sp"
            android:textStyle="bold"
            android:theme="@style/AppTheme" />

        <ImageView
            android:contentDescription="@string/bt_off"
            android:id="@+id/IV_Led1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            app:srcCompat="@drawable/bt_red" />

        <TextView
            android:id="@+id/T_Tex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IV_Led1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/txt"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.299"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.701" />

    </RelativeLayout>

    <Button
        android:id="@+id/BT_Sair"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:text="@string/bt_sair"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="447dp" />

</LinearLayout>
